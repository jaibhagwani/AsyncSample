@model AsyncSample.Common.Model.DashboardResponse

@{
    ViewBag.Title = "Dashboard";
}
<div class="row">
    <div class="col-md-6">
        <h3>Companies</h3>
        <table class="table table-condensed table-responsive table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var com in Model.Companies)
                {
                    <tr>
                        <td>@com.Name</td>
                        <td>@com.Location</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h3>Departments</h3>
        <table class="table table-condensed table-responsive table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dept in Model.Departments)
                {
                    <tr>
                        <td>@dept.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




<h3>Employees</h3>
<table class="table table-condensed table-responsive table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Designation</th>
            <th>PhoneNo</th>
            <th>Address</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model.Employees)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Designation</td>
                <td>@emp.PhoneNo</td>
                <td>@emp.Address</td>
                <td>@emp.Salary</td>
            </tr>
        }
    </tbody>
</table>

